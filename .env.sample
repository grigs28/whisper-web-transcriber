# Whisper Web Transcriber Configuration
# Copy this file to .env and modify the values as needed

# Server Configuration
SECRET_KEY=your-secret-key-here
DEBUG=False
HOST=0.0.0.0
PORT=5551

# File Management
MAX_FILE_AGE=30
MAX_CONTENT_LENGTH=500
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs

# Model Configuration
MODEL_BASE_PATH=/opt/models/openai
DEFAULT_MODEL=large-v3
SUPPORTED_MODELS=tiny,base,small,medium,large,large-v2,large-v3

# GPU Configuration
DEFAULT_GPU_IDS=0
MAX_GPU_MEMORY=0.8

# Transcription Settings
DEFAULT_LANGUAGE=auto
MAX_CONCURRENT_TRANSCRIPTIONS=3
TRANSCRIPTION_TIMEOUT=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5

# WebSocket Configuration
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=25

# Security
ALLOWED_EXTENSIONS=wav,mp3,mp4,avi,mov,m4a,flac,ogg,wma,aac
MAX_FILENAME_LENGTH=255

# Performance
WORKER_THREADS=4
CLEANUP_INTERVAL=3600
MEMORY_CLEANUP_THRESHOLD=0.9